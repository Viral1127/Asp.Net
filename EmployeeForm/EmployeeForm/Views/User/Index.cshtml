@{
}
@model DataTable;
@using System.Data;
<main class="main" id="main">
    <div class="row">
        <div class="col-10">
            <a asp-controller ="User" asp-action="AddUser">
                <button class="btn btn-primary mb-3 float-end">Add</button>

            </a>
        </div>
        <div class="col">
            <a asp-controller="User" asp-action="ExportToExcel">
                <button class="btn btn-primary"> Export To Excel </button>
            </a>
        </div>
            
        
    </div>
    <div class="card">
        <div class="card-body">
            @if (@TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show " role="alert">
                    <h5 class="text-danger">@TempData["Error"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" area-label="close"></button>

                </div>

            }
            <h4 class="text-danger"></h4>
           
            <h5 class="card-title">User Table</h5>

            <!-- Default Table -->

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">UserId</th>
                        <th scope="col">UserName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">Mobile No</th>
                        <th scope="col">Address</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dataRow in Model.Rows)
                    {
                        <tr>
                            <th scope="row">@dataRow["UserId"]</th>
                            <td>@dataRow["UserName"]</td>
                            <td>@dataRow["Email"]</td>
                            <td>@dataRow["Password"]</td>
                            <td>@dataRow["MobileNo"]</td>
                            <td>@dataRow["Address"]</td>
                            <td>@dataRow["IsActive"]</td>
                            <td><button class="btn btn-warning me-3"><i class="bi bi-pencil-square"></i></button>
                                <form asp-controller="User" asp-action="DeleteUser" method="post">
                                    <input type="hidden" name="userId" value="@Convert.ToInt32(dataRow["UserId"])" />
                                    <button class="btn btn-danger" type="sumbit"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Default Table Example -->
        </div>
    </div>
</main>



@{
}
@model EmployeeForm.Models.OrderModel;
<div class="main" id="main">
    <div class="container">

        <section class="section">
            <div class="row">
                <div class="col">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order</h5>

                            <!-- General Form Elements -->
                            <form asp-action="Validate" method="post">
                                <div class="row mb-3">
                                    <label asp-for="OrderDate" class="col-sm-2 col-form-label">Order Date</label>
                                    <div class="col-sm-10">
                                        <input type="date" asp-for="OrderDate" class="form-control">
                                        <span asp-validation-for="OrderDate" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label" asp-for="CustomerId">Customer Name</label>
                                    <div class="col-sm-10">
                                        <select class="form-select" asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.CustomerList, "CustomerId", "CustomerName"))" aria-label="Default select example">
                                            <option value="">Select Customer</option>
                                            
                                            
                                        </select>
                                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label" asp-for="PaymentMode">Payment Mode</label>
                                    <div class="col-sm-10">
                                        <select asp-for="PaymentMode" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">Online</option>
                                            <option value="2">Cash</option>
                                            
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="TotalAmount" class="col-sm-2 col-form-label">Total Amount</label>
                                    <div class="col-sm-10">
                                        <input type="number" asp-for="TotalAmount" class="form-control">
                                        <span asp-validation-for="TotalAmount" class="text-danger"></span>

                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="ShippingAddress" class="col-sm-2 col-form-label">Shipping Address</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" asp-for="ShippingAddress" style="height: 100px"></textarea>
                                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>

                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label" asp-for="UserId"> User Id</label>

                                    <div class="col-sm-10">
                                        <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserList, "UserId", "UserName"))">
                                            <option value="">Select User</option>
                                        </select>
                                        <span asp-validation-for="UserId" class="text-danger"></span>

                                      
                                        
                                    </div>
                                </div>



                                <div class="row mb-3">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit Form</button>
                                    </div>
                                </div>

                            </form><!-- End General Form Elements -->

                        </div>
                    </div>

                </div>


            </div>
        </section>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}